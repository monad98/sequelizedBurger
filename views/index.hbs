<div class="container">
  <div class="row">

    <div class="col-sm-6">
      <img class="burger" src="/public/images/classic-burger.png">
      <h1 class="text-center text-primary">Eat-Da-Burger</h1>
      <form action="/burger?_method=POST" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="burger_name">
        </div>
        <button class="btn btn-primary btn-block" type="submit">Create Burger</button>
      </form>
