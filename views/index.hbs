      <form action="/customer?_method=POST" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name">
        </div>
        <button class="btn btn-success btn-block" type="submit">New Customer</button>
      </form>--}}
    </div>

    <div class="col-sm-6">
      <div class="panel panel-primary">
        <div class="panel-heading text-center">MENU</div>
        <div class="panel-body">
          {{#each burgers}}
          <form class="form-inline" action="/eat/{{this.id}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
              <label><h4><span class="label label-warning">{{this.burger_name}}</span></h4></label>
              <input type="hidden">
            </div>
            <select class="form-control" name="by">
              {{#each ../customers}}
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
            <button class="btn btn-xs btn-primary" type="submit">Devour it!</button>
          </form>
          {{/each}}
        </div>
      </div>
    </div>

  </div>
  <div class="row">

    <div class="col-sm-12">
      <table class="table table-striped table-bordered">
        <tr>
          <th class="text-center">Customer</th>
          <th class="text-center">Burgers</th>
        </tr>
        {{#each customers}}
        <tr>
          <td class="text-center">{{this.name}}</td>
          <td>
          {{#each this.Burgers}}
          <span class="label label-success">{{burger_name}}</span>
          {{/each}}
          </td>
        </tr>
        {{/each}}
      </table>
    </div>


  </div>
</div>
